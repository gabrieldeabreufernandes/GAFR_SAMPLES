<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.hrupin.applicationcachedirsize.MainActivity">

    <Button
        android:id="@+id/buttonFillCache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add some file to cache"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="50dp" />

    <Button
        android:id="@+id/buttonGetCacheSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get cache size"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/textViewSize"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Cache Dir Size:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
